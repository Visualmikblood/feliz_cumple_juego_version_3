# Configuración del entorno para el juego de cumpleaños multijugador
# Copia este archivo a .env y ajusta los valores según tu configuración

# Base de datos (localhost)
DB_HOST_LOCAL=localhost
DB_NAME_LOCAL=birthday_game
DB_USER_LOCAL=root
DB_PASS_LOCAL=

# Base de datos (producción - InfinityFree)
DB_HOST_PROD=sql200.infinityfree.com
DB_NAME_PROD=if0_XXXXXXX_birthday_game
DB_USER_PROD=if0_XXXXXXX
DB_PASS_PROD=tu_password_aqui

# URLs del API
API_URL_LOCAL=http://localhost/birthday-game/backend
API_URL_PROD=https://tu-sitio.infinityfreeapp.com/backend

# Configuración de la aplicación
APP_NAME=Juego de Cumpleaños Multijugador
APP_VERSION=1.0.0
APP_DEBUG=false

# Configuración de tiempo
DEFAULT_TIME_LIMIT_HOURS=72
MAX_PLAYERS_PER_ROOM=50
MIN_PLAYERS_PER_ROOM=2

# Configuración de notificaciones
NOTIFICATION_WARNING_HOURS=24
NOTIFICATION_POLLING_INTERVAL=5000

# Configuración de seguridad
SESSION_LIFETIME_HOURS=24
ROOM_CODE_LENGTH=6
MAX_COMMENT_LENGTH=200